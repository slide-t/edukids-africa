  <script>
    let quizReady = false;

    function openModal(){ document.getElementById("instructionsModal").style.display="flex"; }
    function closeModal(){ document.getElementById("instructionsModal").style.display="none"; }
    function startQuizNow(){
      closeModal();
      document.getElementById("quiz-overlay").style.display="none";
      document.getElementById("quiz-board").classList.remove("disabled");
      quizReady = true;
    }

    // Auto open modal on load
    window.onload = function(){
      openModal();
      quizReady = false;
      document.getElementById("quiz-board").classList.add("disabled");
      document.getElementById("year").textContent=new Date().getFullYear();
      updateClock();
      setInterval(updateClock,1000);
    };

    // Lock keyboard until ready
    window.addEventListener("keydown",function(e){
      if(!quizReady){ e.preventDefault(); e.stopPropagation(); return false; }
    });

    function updateClock(){
      const now=new Date();
      const h=String(now.getHours()).padStart(2,"0");
      const m=String(now.getMinutes()).padStart(2,"0");
      const s=String(now.getSeconds()).padStart(2,"0");
      document.getElementById("clock").textContent=`${h}:${m}:${s}`;
    }
  </script>
  <script src="quiz.js"></script>
